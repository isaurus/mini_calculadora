<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:padding="20dp"
    android:rowCount="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_marginBottom="40dp"
        android:background="@android:color/holo_orange_light"
        android:fontFamily="monospace"
        android:textAlignment="viewEnd"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_uno"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_dos"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_tres"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_cuatro"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_cinco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_seis"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_siete"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_ocho"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_nueve"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_cero"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_punto"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConmutar"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/boton_conmutar"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/btn_sumar"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnRestar"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/btn_restar"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/btn_multiplicar"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="4"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/btn_dividir"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnRaizCuadrada"
        android:layout_width="55dp"
        android:layout_height="135dp"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:layout_margin="3dp"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="@string/btn_raiz_cuadrada"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnInverso"
        android:layout_width="55dp"
        android:layout_height="135dp"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:layout_margin="3dp"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="@string/btn_inverso"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center|top"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_igual"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:layout_gravity="center|top"
        android:backgroundTint="@color/design_default_color_error"
        android:text="@string/btn_borrar"
        android:textStyle="bold" />

</GridLayout>